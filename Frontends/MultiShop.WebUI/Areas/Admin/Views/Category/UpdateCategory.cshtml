@model UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <h4>Kategori Güncelleme</h4>

                    <form method="post">
                        <label> Kategori Id</label>
                        <input type="text" readonly class="form-control" asp-for="CategoryId" />
                        <br />
                        <label> Kategori Adı</label>
                        <input type="text" class="form-control" asp-for="CategoryName" />
                        <br />
                        <button type="submit" class="btn btn-primary">Kategoriyi Güncelle</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</section>