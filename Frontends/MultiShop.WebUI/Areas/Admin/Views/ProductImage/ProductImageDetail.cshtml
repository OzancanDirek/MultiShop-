@model UpdateProductImageDto
@{
    ViewData["Title"] = "ProductImageDetail";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

@if (Model == null)
{
    <div class="alert alert-danger">
        Ürün görselleri bulunamadı.
    </div>
    return;
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <h4>@ViewBag.v3</h4>

                    <form method="post">
                        <input type="hidden" asp-for="ProductImageId" />
                        <input type="hidden" asp-for="ProductId" />

                        <label>Görsel 1</label>
                        <input type="text" class="form-control" asp-for="Image1" />
                        <br />

                        <label>Görsel 2</label>
                        <input type="text" class="form-control" asp-for="Image2" />
                        <br />

                        <label>Görsel 3</label>
                        <input type="text" class="form-control" asp-for="Image3" />
                        <br />

                        <label>Görsel 4</label>
                        <input type="text" class="form-control" asp-for="Image4" />
                        <br />

                        <button type="submit" class="btn btn-success">
                            Ürün Görsellerini Güncelle
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>