@{
    ViewData["Title"] = "ProductDetail";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}


@if (ViewBag.x != null && ViewBag.x.ToString() != "string")
{
    <div class="container-fluid pb-5">
        <div class="row px-xl-5">
            @await Component.InvokeAsync("_ProductDetailImageSliderComponentPartial", new { productId = ViewBag.x })
            @await Component.InvokeAsync("_ProductDetailFeatureComponentPartial", new { id = ViewBag.x })
        </div>
        <div class="row px-xl-5">
            <div class="col">
                <div class="bg-light p-30">
                    <div class="nav nav-tabs mb-4">
                        <a class="nav-item nav-link text-dark active" data-toggle="tab" href="#tab-pane-1">Ürün Detayı</a>
                        <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-2">Bilgilendirme</a>
                        <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-3">Değerlendirmeler</a>
                    </div>
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="tab-pane-1">
                            @await Component.InvokeAsync("_ProductDetailDescriptionComponentPartial", new { id = ViewBag.x })
                        </div>
                        <div class="tab-pane fade" id="tab-pane-2">
                            @await Component.InvokeAsync("_ProductDetailInformationComponentPartial", new { id = ViewBag.x })
                        </div>
                        @* <div class="tab-pane fade" id="tab-pane-3">
                         @await Component.InvokeAsync("_ProductDetailReviewComponentPartial", new { id = ViewBag.x }) 
                        </div> *@
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-12">
                <div class="alert alert-danger text-center">
                    <h4>Hata: Geçersiz Ürün!</h4>
                    <p>Ürün ID'si bulunamadı veya hatalı. Lütfen ürün listesine dönüp bir ürünü yeniden seçin.</p>
                    <a href="/ProductList/Index" class="btn btn-primary">Ürün Listesine Dön</a>
                </div>
            </div>
        </div>
    </div>
}