@model List<ResultCommentDto>

<div class="row">
    <div class="col-md-6">
        <h4 class="mb-4">@(Model?.Count ?? 0) yorum bulunmaktadır</h4>

        @if (Model != null && Model.Count > 0)
        {
            foreach (var item in Model)
            {
                <div class="media mb-4">
                    <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "https://via.placeholder.com/45" : item.ImageUrl)"
                         alt="Image"
                         class="img-fluid mr-3 mt-1"
                         style="width: 45px;">

                    <div class="media-body">
                        <h6>
                            @item.NameSurname
                            <small> - <i>@item.CreatedDate.ToString("dd.MM.yyyy")</i></small>
                        </h6>

                        <!-- ⭐ IF ile yıldızlama -->
                        @if (item.Rating == 1)
                        {
                            <div class="text-primary mb-2">
                                <i class="fas fa-star"></i>
                            </div>
                        }
                        else if (item.Rating == 2)
                        {
                            <div class="text-primary mb-2">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                            </div>
                        }
                        else if (item.Rating == 3)
                        {
                            <div class="text-primary mb-2">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                            </div>
                        }
                        else if (item.Rating == 4)
                        {
                            <div class="text-primary mb-2">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                            </div>
                        }
                        else if (item.Rating == 5)
                        {
                            <div class="text-primary mb-2">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                            </div>
                        }

                        <p>@item.CommentDetail</p>
                    </div>
                </div>
            }
        }
        else
        {
            <p>Bu ürün için henüz yorum yapılmamış. İlk yorumu siz yapın!</p>
        }
    </div>

    <div class="col-md-6">
        <h4 class="mb-4">Bir değerlendirme bırakın</h4>
        <small>Email adresiniz yayınlanmayacaktır. Gerekli alanlar işaretlenmiştir *</small>

        <form>
            <div class="form-group">
                <label for="message">Yorumunuz *</label>
                <textarea id="message" cols="30" rows="5" class="form-control"></textarea>
            </div>

            <div class="form-group">
                <label for="name">Adınız Soyadınız *</label>
                <input type="text" class="form-control" id="name">
            </div>

            <div class="form-group">
                <label for="email">Email Adresiniz *</label>
                <input type="email" class="form-control" id="email">
            </div>

            <div class="form-group mb-0">
                <button type="submit" class="btn btn-primary px-3">
                    Yorumu Gönder
                </button>
            </div>
        </form>
    </div>
</div>
